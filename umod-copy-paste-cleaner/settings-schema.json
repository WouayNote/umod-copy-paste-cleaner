{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema of the json settings file.",
  "type": "object",
  "properties": {
    "version": {
      "type": "number"
    },
    "filters": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "filter-id": {
            "type": "string"
          },
          "removed-prefabs": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "switchedoff-prefabs": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "filter-id",
          "removed-prefabs",
          "switchedoff-prefabs"
        ]
      }
    }
  },
  "required": [
    "version",
    "filters"
  ]
}